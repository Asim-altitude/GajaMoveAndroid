<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="customer.gajamove.com.gajamove_customer.OrderHistoryScreen">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white_color"
        android:padding="5dp"
        >
        <TextView
            android:fontFamily="@font/body_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/next_btn_drawable"
            android:textColor="@color/white_color"
            android:text="@string/completed"
            android:gravity="center"
            android:textSize="14dp"
            android:id="@+id/complete_tab_btn"
            android:layout_margin="10dp"
            />
        <TextView
            android:fontFamily="@font/body_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/next_btn_drawable"
            android:textColor="@color/white_color"
            android:text="@string/cancelled"
            android:gravity="center"
            android:textSize="14dp"
            android:id="@+id/cancelled_tab_btn"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_lay"
        ></FrameLayout>


</LinearLayout>
