<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rect_filled"
    android:layout_margin="5dp"
    android:elevation="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            >
            <TextView
                android:fontFamily="@font/body_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order# "
                android:textSize="14dp"
                android:textColor="@color/black_color"
                />
            <TextView
                android:id="@+id/order_id"
                android:fontFamily="@font/body_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="202"
                android:textSize="12dp"
                android:textColor="@color/theme_primary"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/date_time_txt"
                android:fontFamily="@font/body_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 june Wed 2021 AB"
                android:textSize="12dp"
                android:textColor="@color/dark_gray_color"
                />
        </LinearLayout>
    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="5dp"

        >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bell"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/notification_title"
            android:fontFamily="@font/body_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titile"
            android:textSize="14dp"
            android:textColor="@color/black_color"
            />
        <TextView
            android:id="@+id/notification_desc"
            android:fontFamily="@font/body_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is description of notification"
            android:textSize="12dp"
            android:textColor="@color/dark_gray_color"
            />
    </LinearLayout>


    </LinearLayout>

</LinearLayout>