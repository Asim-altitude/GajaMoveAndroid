                    android:src="@drawable/map_pin"
                    />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:id="@+id/pickup_header_text"
                        android:fontFamily="@font/body_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salak Satan"
                        android:textColor="@color/black_color"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:id="@+id/pickup_location_txt"
                        android:fontFamily="@font/body_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salak Satan, Salak South, Kuala Lampur"
                        android:textColor="@color/dark_gray_color"
                        android:textSize="12dp"
                        android:minLines="2"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/destination_header_text"
                        android:fontFamily="@font/body_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salak Satan"
                        android:textColor="@color/black_color"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:id="@+id/destination_location_txt"
                        android:fontFamily="@font/body_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salak Satan, Salak South, Kuala LampurSalak Satan, Salak South, Kuala Lampur"
                        android:textColor="@color/dark_gray_color"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:minLines="2"
                        android:maxLines="2"
                        android:ellipsize="end"
                        />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stop_list"
                    tools:listitem="@layout/stop_info_lay"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:divider="@null"
                    android:dividerHeight="5dp"
                    />

            </LinearLayout>





        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:focusable="false"
            android:clickable="false"
            android:visibility="gone"
            android:id="@+id/additionalservices_lay"
            >
            <TextView
                android:fontFamily="@font/body_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Additionl Services"
                android:textColor="@color/dark_gray_color"
                android:textSize="12dp"
                />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/services_list_view"
                android:layout_marginTop="10dp"
                android:divider="@null"
                android:dividerHeight="2dp"
                android:focusable="false"
                android:clickable="false"
                tools:listitem="@layout/additional_service_item"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/total_km_lay"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                >


                <TextView
                    android:fontFamily="@font/body_one"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/secondary_black"
                    android:text="Total KM"

                    />

                <TextView
                    android:fontFamily="@font/heading_one"
                    android:id="@+id/extra_km_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="@color/black_color"
                    android:text="0KM"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/total_price_lay"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                >


                <TextView
                    android:fontFamily="@font/body_one"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/secondary_black"
                    android:text="Grand Total"

                    />

                <TextView
                    android:fontFamily="@font/heading_one"
                    android:id="@+id/total_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="@color/black_color"
                    android:text="RM0"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/drop_down_lay"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:fontFamily="@font/body_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_details"
                    android:textSize="14dp"
                    android:textColor="@color/black_color"
                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/arrow_down"
                    android:rotation="-90"


                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>