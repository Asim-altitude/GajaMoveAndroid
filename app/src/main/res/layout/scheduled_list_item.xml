<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rect_filled"
        android:layout_margin="15dp"
        android:elevation="5dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/current_job_lay"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/proceed_lay"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4"
                android:layout_margin="10dp"
                >
                <TextView
                    android:id="@+id/service_name"
                    android:fontFamily="@font/body_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motorcycle"
                    android:textColor="@color/black_color"
                    android:textSize="14dp"
                    />




                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today, Feb 22, ASAP"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="12dp"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="10dp"
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/view_driver_btn"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow_fwd"
                    android:padding="10dp"

                    />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/driver_lay"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_margin="5dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile_icon"
                    android:id="@+id/driver_image"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/driver_name"
                        android:fontFamily="@font/body_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/black_color"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/vehicle_plate"
                        android:fontFamily="@font/body_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="qwqdwq"
                        android:textColor="@color/black_color"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:fontFamily="@font/body_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Cancel Job"
                android:textColor="@color/theme_primary"
                android:layout_margin="5dp"
                android:id="@+id/cancel_job"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:visibility="gone"
                >
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/side_point_list"
                    android:visibility="visible"
                    android:divider="@null"
                    />
