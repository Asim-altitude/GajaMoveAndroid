                    android:layout_marginTop="2dp"
                    android:layout_height="2dp"
                    android:src="@drawable/ellipse"
                    />
                <ImageView
                    android:layout_width="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="2dp"
