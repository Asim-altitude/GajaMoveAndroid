<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:gravity="center_vertical"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/profile_lay"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/dark_circle"
                    android:id="@+id/imageView"
                    ></de.hdodenhof.circleimageview.CircleImageView>

                <ImageView
                    android:id="@+id/camera_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/camera"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:background="@drawable/grey_rect_empty"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/user"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"


                    />
                <EditText
                    android:fontFamily="@font/body_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:textColor="@color/black_color"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="@string/name"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:id="@+id/name"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:background="@drawable/grey_rect_empty"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/smartphone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"


                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:fontFamily="@font/body_one"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="+60"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black_color"
                        />
                    <EditText
                        android:fontFamily="@font/body_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:textColor="@color/black_color"
                        android:textStyle="normal"
                        android:maxLines="1"
                        android:inputType="number"
                        android:hint="2165415##"
                        android:background="@null"
                        android:imeOptions="actionNext"
                        android:id="@+id/phone"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_rect_empty"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/mail"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"


                    />
                <EditText
                    android:fontFamily="@font/body_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:textColor="@color/black_color"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="@string/email"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:id="@+id/username"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/industry_lay"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:background="@drawable/grey_rect_empty"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/building_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:tint="@color/dark_gray_color"
                        />


                    <TextView
                        android:fontFamily="@font/body_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:textColor="@color/black_color"
                        android:textStyle="normal"
                        android:maxLines="1"
                        android:text="Choose Industry"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:background="@null"
                        android:imeOptions="actionNext"
                        android:id="@+id/industry_name"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@drawable/arrow_fwd"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_rect_empty"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/lock"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"

                    />


                <EditText
                    android:fontFamily="@font/body_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:textColor="@color/black_color"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:id="@+id/password"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:fontFamily="@font/body_one"
                    android:id="@+id/btnAgreedterms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_color"
                    android:buttonTint="@color/theme_primary"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/terms_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I have read accept and understood the Terms and Conditions and Privacy Policy"
                    />

            </LinearLayout>



            <Button
                android:fontFamily="@font/body_two"
                android:id="@+id/email_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/next_btn_drawable"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:layout_marginTop="30dp"
                android:textColor="@color/white_color"
                android:elevation="5dp"
                android:text="@string/submit"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/redirect_sign_in"
                >
                <TextView
                    android:fontFamily="@font/body_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:text="@string/already_have_account"
                    android:textColor="@color/black_color"
                    android:textSize="16dp" />
                <TextView
                    android:fontFamily="@font/body_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:text="@string/sign_in"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/theme_primary"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    </ScrollView>

</RelativeLayout>

