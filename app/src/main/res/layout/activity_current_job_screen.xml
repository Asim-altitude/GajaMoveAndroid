                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/stop_list"
                    tools:listitem="@layout/stop_info_lay"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
