<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="customer.gajamove.com.gajamove_customer.CurrentJobScreen">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_content"
        ></FrameLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_left"
        android:layout_margin="20dp"
        android:id="@+id/back_btn"
        />


    <TextView
        android:id="@+id/cancel_button"
        android:fontFamily="@font/body_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="@string/cancel"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/theme_primary"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/driver_lay"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_corner_rounded_rect"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down"
            android:id="@+id/collapse_expand_btn"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/profile_icon"
                    android:id="@+id/user_image"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/body_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14dp"
                        android:textColor="@color/black_color"
                        android:id="@+id/user_name"
                        />
                    <TextView
                        android:fontFamily="@font/body_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12dp"
                        android:visibility="visible"
                        android:textColor="@color/black_color"
                        android:id="@+id/plate_txt"
                        />
                    <TextView
                        android:fontFamily="@font/body_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12dp"
                        android:visibility="visible"
                        android:textColor="@color/dark_gray_color"
                        android:id="@+id/distance_txt"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"


                    >
                    <ImageView
                        android:id="@+id/phone_lay"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:background="@drawable/next_btn_drawable"
                        android:src="@drawable/phone"
                        />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/chat_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:background="@drawable/next_btn_drawable"
                        android:src="@drawable/ic_sms_black_24dp"
                        android:tint="@color/white_color"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:fontFamily="@font/body_one"
                android:id="@+id/status_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black_color" />
        </LinearLayout>
        <LinearLayout
