<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="customer.gajamove.com.gajamove_customer.HomeScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white_color"
        >
        <ImageView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:src="@drawable/gajamove_text"
            android:layout_centerInParent="true"

            />

        <ImageView
            android:id="@+id/sos_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bell"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="60dp"
        android:id="@+id/content_lay"
        ></FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@color/white_color"
        android:layout_alignParentBottom="true"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/home_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@color/white_color"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:padding="5dp"
                    android:src="@drawable/home"
                    android:tint="@color/dark_gray_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/body_one"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="10dp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white_color"
            android:layout_alignParentBottom="true"
            android:id="@+id/history_tab"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:src="@drawable/history"
                android:padding="5dp"
                />
            <TextView
                android:fontFamily="@font/body_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/History"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/dark_gray_color"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white_color"
            android:layout_alignParentBottom="true"
            android:id="@+id/account_tab"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:src="@drawable/profile"
                android:padding="5dp"
                android:tint="@color/dark_gray_color"
                />
            <TextView
                android:fontFamily="@font/body_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Account"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/dark_gray_color"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white_color"
            android:layout_alignParentBottom="true"
            android:id="@+id/logout_tab"
            android:visibility="visible"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:src="@drawable/wallet"
                android:padding="10dp"
                android:tint="@color/dark_gray_color"
                />
            <TextView
                android:fontFamily="@font/body_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/finance"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/dark_gray_color"
                />
        </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
