<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rect_filled"
        android:orientation="vertical"

        >
        <TextView
            android:fontFamily="@font/body_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Withdrawal"
            android:textColor="@color/white_color"
            android:textSize="16sp"
            android:padding="15dp"
            android:textStyle="bold"
            android:background="@color/step_color"
            android:gravity="center_horizontal"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:fontFamily="@font/body_one"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Total credit"
                    android:background="@null"
                    android:textSize="14dp"
                    android:inputType="number"
                    android:textColor="@color/black_color"
                    />
                <TextView
                    android:fontFamily="@font/body_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM00"
                    android:background="@null"
                    android:textSize="16dp"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black_color"
                    android:id="@+id/refund_total_credit"
                    />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:fontFamily="@font/body_one"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="You can withdraw"
                    android:background="@null"
                    android:textSize="14dp"
                    android:inputType="number"
                    android:textColor="@color/black_color"
                    />
                <TextView
                    android:fontFamily="@font/body_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM00"
                    android:background="@null"
                    android:textSize="16dp"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black_color"
                    android:id="@+id/refund_driver_credit"
                    />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@color/light_gray"
            >

            <EditText
                android:fontFamily="@font/body_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Amount"
                android:background="@null"
                android:textSize="16dp"
                android:padding="15dp"
                android:ems="2"
                android:inputType="numberDecimal"
                android:id="@+id/amount_input"
                />


        </LinearLayout>

        <TextView
            android:fontFamily="@font/body_one"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/next_btn_drawable"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:textColor="@color/white_color"
            android:id="@+id/request_btn"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/step_color"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>